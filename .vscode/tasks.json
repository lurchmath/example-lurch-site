{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run LDE tests in console",
            "type": "shell",
            "command": "cd lde && npm test",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch LDE test server",
            "type": "shell",
            "command": "cd lde && npm run test-server",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Rebuild LDE source code documentation",
            "type": "shell",
            "command": "cd lde && npm run docs",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Rebuild LDE database from disk",
            "type": "shell",
            "command": "cd lde && npm run build-db",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build UI source code docs",
            "type": "shell",
            "command": "cd ui && rm -rf docs && jsdoc *.js cli/*.mjs -d docs -R doc-main.md -c jsdoc-conf.json --verbose",
            "problemMatcher": []
        },
        {
            "label": "Download and rebuild parsers for UI",
            "type": "shell",
            "command": "cd ui/parsers && sh build-all.sh",
            "problemMatcher": []
		}
    ]
}
