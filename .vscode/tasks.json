{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Core classes: Run tests in console",
            "type": "shell",
            "command": "cd core && npm test",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Core classes: Launch test server",
            "type": "shell",
            "command": "cd core && npm run test-server",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Core classes: Rebuild database",
            "type": "shell",
            "command": "cd core && npm run build-db",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "UI: Build source code docs",
            "type": "shell",
            "command": "cd ui && rm -rf docs && jsdoc *.js cli/*.mjs -d docs -R doc-main.md -c jsdoc-conf.json --verbose",
            "problemMatcher": []
        },
        {
            "label": "UI: Download and rebuild parsers",
            "type": "shell",
            "command": "cd ui/parsers && sh build-all.sh",
            "problemMatcher": []
		}
    ]
}
